@model HR_Management.Models.Et

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white py-3">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Employee</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="EmployeeId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Department" class="form-label fw-semibold"></label>
                    <input asp-for="Department" class="form-control form-control-lg" />
                    <span asp-validation-for="Department" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Salary" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Salary" class="form-control form-control-lg" />
                    </div>
                    <span asp-validation-for="Salary" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn {
        transition: all 0.2s ease;
        padding: 0.5rem 1.25rem;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn-outline-secondary {
        border-color: #dee2e6;
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .input-group-text {
        background-color: #f8f9fa;
    }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}