@model HR_Management.Models.Et

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white py-3">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Delete Employee</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4">Are you sure you want to delete this employee?</h5>

            <dl class="row">
                <dt class="col-sm-3 text-muted">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 text-muted">Department</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>

                <dt class="col-sm-3 text-muted">Salary</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="EmployeeId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash me-1"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn {
        transition: all 0.2s ease;
        padding: 0.5rem 1.25rem;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn-outline-secondary {
        border-color: #dee2e6;
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .input-group-text {
        background-color: #f8f9fa;
    }
</style>